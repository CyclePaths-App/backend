{
  "name": "backend",
  "version": "1.0.0",
  "description": "CyclePaths backend",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "jest",
    "clean": "rm -r ./dist"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageThreshold": {
      "branches": 70,
      "functions": 100,
      "lines": 70
    },
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyclePaths-App/backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CyclePaths-App/backend/issues"
  },
  "homepage": "https://github.com/CyclePaths-App/backend#readme",
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "babel-jest": "^30.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "prettier": "3.6.2"
  }
}
