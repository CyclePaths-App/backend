{
  "name": "backend",
  "version": "1.0.0",
  "description": "CyclePaths backend",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "jest --detectOpenHandles",
    "clean": "rm -r ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyclePaths-App/backend.git"
  },
  "contributors": [
    {
      "name": "Danny Peck",
      "email": "dannypeck5000@gmail.com"
    },
    {
      "name": "Safana Othman"
    },
    {
      "name": "Sridhana Tata"
    },
    {
      "name": "Tanisha Somwaru"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CyclePaths-App/backend/issues"
  },
  "homepage": "https://github.com/CyclePaths-App/backend#readme",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "transform": {
      "^./src/+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/controllers/*.{ts,tsx}",
      "./src/lib/*.{ts,tsx}",
      "./src/logic/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "branches": 70,
      "functions": 100,
      "lines": 70
    }
  },
  "dependencies": {
    "@turf/length": "^7.2.0",
    "@turf/turf": "^7.2.0",
    "@types/cors": "^2.8.19",

    "@types/express": "^5.0.5",
    "@types/node": "^24.3.1",

    "argon2": "^0.44.0",

    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",

    "@types/supertest": "^6.0.3",
    "@types/jest": "^30.0.0",
    "axios": "^1.12.2",
    "jest": "^30.1.3",
    "prettier": "3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4"
  }
}
