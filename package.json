{
  "name": "backend",
  "version": "1.0.0",
  "description": "CyclePaths backend",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "jest --detectOpenHandles",
    "clean": "rm -r ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CyclePaths-App/backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CyclePaths-App/backend/issues"
  },
  "homepage": "https://github.com/CyclePaths-App/backend#readme",
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.[t|j]sx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "/src/controllers/*.{ts,tsx}",
      "/src/lib/*.{ts,tsx}",
      "/src/logic/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "branches": 70,
      "functions": 100,
      "lines": 70
    }
  },
  "dependencies": {
    "@turf/length": "^7.2.0",
    "@turf/turf": "^7.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "axios": "^1.12.2",
    "jest": "^30.1.3",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.4"
  }
}
